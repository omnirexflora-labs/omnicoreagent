# .env
LLM_API_KEY=sk-your-key-here

# Redis â€“ ONLY THIS
REDIS_URL=redis://redis:6379/0

# Storage type
MEMORY_STORE_TYPE=redis
EVENT_STORE_TYPE=redis_stream

# Observability
OBSERVABILITY_ENABLE_METRICS=true
OBSERVABILITY_LOG_LEVEL=INFO
OBSERVABILITY_LOG_FORMAT=json
OBSERVABILITY_LOG_FILE=/logs/copilot.log
OBSERVABILITY_LOG_MAX_BYTES=10485760
OBSERVABILITY_LOG_BACKUP_COUNT=5

# Security
SECURITY_ENABLE_RATE_LIMITING=true
SECURITY_RATE_LIMIT_REQUESTS=100
SECURITY_RATE_LIMIT_WINDOW=3600
SECURITY_AUDIT_LOG_FILE=/logs/audit.log

# Grafana
GRAFANA_PASSWORD=admin123